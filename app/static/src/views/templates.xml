<template id="rewear_homepage" name="ReWear Homepage">
    <t t-call="website.layout">
        <!-- Same content as index.html, but with Odoo template syntax -->
        <div class="hero">
            <h1>Swap Clothes, Save the Planet</h1>
            <p>Join our sustainable fashion community...</p>
            <!-- Use t-foreach for dynamic content -->
            <t t-foreach="featured_items" t-as="item">
                <div class="carousel-item">
                    <img t-att-src="item.image_url" t-att-alt="item.name"/>
                    <h3 t-esc="item.name"/>
                </div>
            </t>
        </div>
    </t>
</template>