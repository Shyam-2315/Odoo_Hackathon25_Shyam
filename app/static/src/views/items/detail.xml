<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="item_detail_page" name="Item Detail">
    <t t-call="website.layout">
      <div class="container">
        <div class="item-detail-container" style="display: flex; gap: 40px; margin-top: 30px;">
          <!-- Item Images -->
          <div style="flex: 1;">
            <div style="border: 1px solid #eee; border-radius: 8px; overflow: hidden;">
              <img t-att-src="item.image_url" style="width: 100%; height: auto; display: block;"/>
            </div>
            <div style="display: flex; gap: 10px; margin-top: 15px;">
              <t t-foreach="item.additional_images" t-as="img">
                <img t-att-src="img" style="width: 80px; height: 80px; object-fit: cover; border-radius: 4px; cursor: pointer;"/>
              </t>
            </div>
          </div>

          <!-- Item Info -->
          <div style="flex: 1;">
            <h1 t-esc="item.name" style="margin-bottom: 10px;"/>
            <p style="color: var(--primary); font-size: 24px; font-weight: bold; margin-bottom: 20px;">
              <t t-esc="item.points + ' points'"/>
            </p>
            
            <div style="margin-bottom: 20px;">
              <h3 style="margin-bottom: 10px;">Details</h3>
              <p t-esc="'Size: ' + item.size" style="margin: 5px 0;"/>
              <p t-esc="'Condition: ' + item.condition" style="margin: 5px 0;"/>
              <p t-esc="'Brand: ' + item.brand" style="margin: 5px 0;"/>
              <p t-esc="'Category: ' + item.category" style="margin: 5px 0;"/>
            </div>

            <div style="margin-bottom: 30px;">
              <h3 style="margin-bottom: 10px;">Description</h3>
              <p t-esc="item.description" style="white-space: pre-line;"/>
            </div>

            <div style="display: flex; gap: 15px;">
              <button class="btn btn-primary btn-propose-swap" t-att-data-item-id="item.id" style="padding: 12px 24px;">
                Propose Swap
              </button>
              <button class="btn btn-outline" style="padding: 12px 24px;">
                <i class="fa fa-heart"/> Save
              </button>
            </div>
          </div>
        </div>

        <!-- Owner Info -->
        <div style="margin-top: 50px; background: #f9f9f9; padding: 20px; border-radius: 8px;">
          <h3 style="margin-bottom: 15px;">About the Owner</h3>
          <div style="display: flex; align-items: center; gap: 15px;">
            <div style="width: 60px; height: 60px; background: #ddd; border-radius: 50%;"></div>
            <div>
              <p style="font-weight: bold; margin-bottom: 5px;" t-esc="item.owner_name"/>
              <p style="color: #666;" t-esc="'Member since ' + item.owner_join_date"/>
              <p style="color: #666;" t-esc="item.owner_swap_count + ' successful swaps'"/>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>